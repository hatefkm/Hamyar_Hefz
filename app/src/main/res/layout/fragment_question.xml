<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context=".ayatnavigationbar.QuestionFragment">

    <!-- TODO: Update blank fragment layout -->




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/scrol_back"

            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtQQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingStart="25dp"

                android:paddingEnd="30dp"
                android:text=" این بخش دارای سوالاتی از ایاتی است که ابتدا یا انتهای مشابه دارند. "
                android:textAlignment="center"
                android:textColor="#012C4E"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonDidn"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_below="@+id/txtQQ"
                android:layout_centerInParent="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/bck_play"
                android:onClick="btnSoal"
                android:text="دیدن صفحه سوالات"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </Button>


        </LinearLayout>





    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>