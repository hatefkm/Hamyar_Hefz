<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebackground"
    tools:context=".ZekrActivity"
    android:gravity="center">


    <ImageView
        android:id="@+id/btnSlvt"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="25pt"
        android:background="@drawable/onvan_slavat"
        android:onClick="btnSlvt" />


    <ImageView
        android:id="@+id/btnAyamHfte"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/btnSlvt"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="25pt"
        android:onClick="btnAyamHfte"
        android:background="@drawable/onvav_zkrhfte"


        />


    <ImageView
        android:id="@+id/btnTsbihat"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/btnAyamHfte"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/onvan_tsbih"
        android:onClick="btnTsbihat" />





</RelativeLayout>