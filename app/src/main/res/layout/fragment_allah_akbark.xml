<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllahAkbarkFragment"
    android:background="@drawable/bck_play"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >


        <Button
            android:id="@+id/btn_addAllah"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_add"



            android:layout_marginStart="20dp"

            android:layout_marginBottom="20dp" />


        <Button
            android:id="@+id/btn_resetAllah"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginStart="20dp"

            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@+id/btn_addAllah"
            android:background="@drawable/refresh" />

        <Button
            android:id="@+id/btn_playAllah"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/play_song_icon"

            android:layout_marginStart="20dp"
            android:layout_below="@+id/btn_addAllah"
            android:layout_marginBottom="20dp" />



        <Button
            android:id="@+id/btn_puaseAllah"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_marginStart="20dp"

            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/btn_resetAllah"
            android:layout_toRightOf="@id/btn_playAllah"
            android:background="@drawable/pause_song_icon" />


        <TextView
            android:id="@+id/tv_resultAllah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginStart="30dp"
            android:layout_toRightOf="@+id/btn_resetAllah"
            android:layout_marginTop="30dp"

            android:text="0"
            android:textColor="@color/light_blue_900"
            android:textSize="30dp" />


        <ImageView
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/allahoakbar"
            />


    </RelativeLayout>

</FrameLayout>