<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllahAkbarkFragment"
    android:background="@drawable/bck_play"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >


        <Button
            android:id="@+id/btn_addAllah"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:background="@drawable/ic_add"



            android:layout_marginStart="20dp"

            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btn_menhaAllah"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/btn_addAllah"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_baseline_remove_circle_outline_24" />


        <Button
            android:id="@+id/btn_resetAllah"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="33dp"

            android:layout_toRightOf="@+id/btn_addAllah"
            android:background="@drawable/refresh" />


        <TextView
            android:id="@+id/tv_resultAllah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginStart="20dp"
            android:layout_toRightOf="@+id/btn_resetAllah"
            android:layout_marginTop="30dp"

            android:text="0"
            android:textColor="#012C4E"
            android:textSize="30dp" />


        <ImageView
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="5dp"
            android:layout_toRightOf="@id/btn_resetAllah"
            android:src="@drawable/allahoakbar" />


    </RelativeLayout>

</FrameLayout>