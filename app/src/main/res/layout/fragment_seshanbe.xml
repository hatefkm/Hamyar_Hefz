<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeshanbeFragment"
    android:background="@drawable/bck_play">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        >



        <Button
            android:id="@+id/btn_playSeshanbe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/play_song_icon" />


        <Button
            android:id="@+id/btn_resetSeshanbe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/btn_playSeshanbe"
            android:background="@drawable/refresh" />

        <Button
            android:id="@+id/btn_addSeshanbe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/btn_playSeshanbe"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_add" />

        <Button
            android:id="@+id/btn_menhaSeshanbe"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/btn_resetSeshanbe"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_toRightOf="@id/btn_addSeshanbe"
            android:background="@drawable/ic_baseline_remove_circle_outline_24" />


        <TextView
            android:id="@+id/tv_resultSeshanbe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/btn_resetSeshanbe"
            android:text="0"
            android:textColor="#012C4E"
            android:textSize="30dp" />


        <ImageView
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="5dp"
            android:layout_toRightOf="@id/btn_resetSeshanbe"
            android:src="@drawable/seshanbeh" />



    </RelativeLayout>


</FrameLayout>