<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlhamdFragment"
    android:background="@drawable/bck_play">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >


        <Button
            android:id="@+id/btn_addAlhamd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"


            android:background="@drawable/ic_add" />

        <Button
            android:id="@+id/btn_menhaAlhamd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/btn_addAlhamd"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_baseline_remove_circle_outline_24" />


        <Button
            android:id="@+id/btn_resetAlhamd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="33dp"
            android:layout_toRightOf="@+id/btn_addAlhamd"
            android:background="@drawable/refresh" />

        <TextView
            android:id="@+id/tv_resultAlhamd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/btn_resetAlhamd"
            android:text="0"
            android:textColor="#012C4E"
            android:textSize="30dp" />


        <ImageView
            android:layout_width="190dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="5dp"
            android:layout_toRightOf="@+id/btn_resetAlhamd"
            android:src="@drawable/alhamdolellah" />


    </RelativeLayout>

</FrameLayout>